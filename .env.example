# Alkanes Documentation & Governance Platform
# Copy to .env and fill in values

# ============================================
# Database (Cloud SQL for production)
# ============================================
# Local development:
# DATABASE_URL="postgresql://alkanes:alkanes_dev_password@localhost:5432/alkanes_docs"

# Cloud SQL (production):
# DATABASE_URL="postgresql://alkanes:<password>@/alkanes_docs?host=/cloudsql/<project>:<region>:<instance>"
DATABASE_URL="postgresql://alkanes:password@localhost:5432/alkanes_docs"

# ============================================
# Redis (Cloud Memorystore for production)
# ============================================
# Local development:
# REDIS_URL="redis://localhost:6379"

# Cloud Memorystore (production):
# REDIS_URL="redis://10.x.x.x:6379"
REDIS_URL="redis://localhost:6379"

# ============================================
# Network Configuration
# ============================================
# Options: mainnet, testnet, signet, regtest
NEXT_PUBLIC_NETWORK="mainnet"

# ============================================
# Sandshrew API (for alkane data)
# ============================================
SANDSHREW_API_URL="https://mainnet.sandshrew.io/v4/wrlckwrld"

